<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.getcherry.chat.forgot_password"
    android:background="@drawable/triangles">

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/reset_email"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:background="@drawable/my_border1"
        android:hint="Email ID"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="CHERRY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Heading"
        android:textSize="75sp"
        android:textColor="@android:color/background_light"
        android:fontFamily="cursive"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Reset"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/main_reset"
        android:background="@drawable/my_border"
        android:textStyle="normal|bold"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/reset_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Enter Your Email ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_above="@+id/reset_email"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Go back to the Login Page
        "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_page"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/main_reset"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
